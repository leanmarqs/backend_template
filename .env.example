# Server
PORT=3000

# CORS origin allowed by the server
# For multiple origins, separate with commas
CORS_ORIGIN=http://localhost:5173

# Database (MySQL)
# Format: mysql://USER:PASSWORD@HOST:PORT/DB_NAME
# Example: mysql://root:password@localhost:3306/mydb
DATABASE_URL=mysql://USER:PASSWORD@HOST:3306/DB_NAME

# Security
# Generate secret using: node -e "console.log(crypto.randomBytes(32).toString('hex'))"
BCRYPT_SECRET=""
BCRYPT_SALT_ROUNDS=12

